@model JobVacanciesAPP.Models.EditRecruiterProfileViewModel
@{
    ViewData["Title"] = "Редагування профілю рекрутера";
}

<h2 class="mb-4">Редагування профілю рекрутера</h2>

<form asp-action="EditRecruiter" method="post" class="card p-4 shadow-sm">

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CompanyName" class="form-label">Компанія</label>
        <input asp-for="CompanyName" class="form-control" />
        <span asp-validation-for="CompanyName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Position" class="form-label">Посада</label>
        <input asp-for="Position" class="form-control" />
        <span asp-validation-for="Position" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Зберегти зміни</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Скасувати</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

