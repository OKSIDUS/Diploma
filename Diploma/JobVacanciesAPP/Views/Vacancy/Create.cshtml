@model JobVacanciesAPP.DAL.Models.Vacancy.CreateVacancy

@{
    ViewData["Title"] = "Створити вакансію";
}

<h2>Створити вакансію</h2>

<form asp-action="Create" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group mb-2">
        <label>Назва вакансії</label>
        <input asp-for="VacancyInfo.Title" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label>Локація</label>
        <input asp-for="VacancyInfo.Location" class="form-control" />
    </div>

    <div class="form-group row mb-2">
        <div class="col">
            <label>Зарплата від (грн/міс)</label>
            <input asp-for="VacancyInfo.SalaryMin" class="form-control" />
        </div>
        <div class="col">
            <label>Зарплата до (грн/міс)</label>
            <input asp-for="VacancyInfo.SalaryMax" class="form-control" />
        </div>
    </div>

    <div class="form-group mb-2">
        <label>Вимоги до кандидата</label>
        <textarea asp-for="VacancyInfo.Requirements" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-group mb-2">
        <label>Опис вакансії</label>
        <textarea asp-for="VacancyInfo.Description" class="form-control" rows="3"></textarea>
    </div>

    <div class="form-group mb-4">
        <label>Теги</label>
        <select asp-for="Skills.SelectedTags" class="form-control" id="tags" multiple>
            @foreach (var tag in Model.Skills.AllAvailableTags)
            {
                <option value="@tag">@tag</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Опублікувати</button>
    <a asp-action="Index" asp-controller="Profile" class="btn btn-secondary">Скасувати</a>
</form>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tags').select2({
                tags: true,
                placeholder: "Оберіть або введіть теги",
                tokenSeparators: [',']
            });
        });
    </script>
}
